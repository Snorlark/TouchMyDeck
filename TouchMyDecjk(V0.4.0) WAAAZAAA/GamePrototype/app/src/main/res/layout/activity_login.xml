<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curt_b"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/textbox3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/textbox3" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"

        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tmd_regular"
        android:textSize="14sp"

        android:hint="Username"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#888888"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
        app:layout_constraintEnd_toEndOf="@id/textbox3"
        app:layout_constraintStart_toStartOf="@id/textbox3" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="40dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/tmd_regular"
        android:textSize="14sp"

        android:hint="Password"

        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="#888888"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintEnd_toEndOf="@id/textbox3"
        app:layout_constraintStart_toStartOf="@id/textbox3" />

    <ImageView
        android:id="@+id/buttonLogin"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:layout_marginBottom="64dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/textbox3"
        app:layout_constraintEnd_toEndOf="@+id/textbox3"
        app:layout_constraintStart_toStartOf="@+id/textbox3"
        app:srcCompat="@drawable/loginbutton" />


</androidx.constraintlayout.widget.ConstraintLayout>
